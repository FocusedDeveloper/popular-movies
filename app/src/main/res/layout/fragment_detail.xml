<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.com.example.android.d1spopularmovies.DetailActivityFragment">


    <TextView
        android:id="@+id/movie_title_textview"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:textSize="36sp"
        android:background="#03A9F4"
        android:textColor="#212121"



        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/movie_poster_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_margin="4dp"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_toRightOf="@+id/movie_poster_imageview">


            <TextView
                android:id="@+id/movie_release_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:gravity="center"
                android:padding="8dp"

                />
            <TextView
                android:id="@+id/movie_rating_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:gravity="center"
                android:padding="8dp"

                />
        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:scrollbars="vertical"
        android:id="@+id/movie_plot_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/layout_header"
        android:textColor="#212121"
        android:background="#B3E5FC"

        />

</LinearLayout>




